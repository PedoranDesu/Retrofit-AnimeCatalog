<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="onClickListener"
            type="com.pedo.animecatalog.ui.adapter.AnimeListAdapter.OnClickListener" />
        <variable
            name="movie"
            type="com.pedo.animecatalog.domain.Anime"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> onClickListener.onClick(movie)}"
        >

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/img_cover"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:padding="2dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{movie.imageUrl}"
            tools:src="@tools:sample/backgrounds/scenic"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TITLE"
            app:layout_constraintLeft_toRightOf="@id/img_cover"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/default_dimen"
            android:layout_marginStart="@dimen/default_dimen"
            android:text="@{movie.title}"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>